<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :item_code %>
    <%= form.text_field :item_code %>
  </div>

    <% if product.pictures? %>
      <div class="d-flex flex-row bg-info mb-2">
    <% product.pictures.each_with_index do |pic, i| %>
      <div class="p-2">
        <%= image_tag pic.thumb.url %>
        <%= hidden_field :product, :pictures, multiple: true, value: pic.identifier %>
        <%= form.label :remove_picture %>
        <%= form.check_box :remove_picture, name:"product[remove_pictures][#{i}]" %>
      </div>
    <% end %>
      </div>
    <% end %>

  <div class="form-group">
    <%= form.label :pictures %>
    <%= form.file_field :pictures, multiple: true %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description %>
  </div>

  <div class="field">
    <%= form.label :unit_price %>
    <%= form.text_field :unit_price %>
    <%= form.select :currency, [ "EUR", "USD", "TL" ], include_blank: "Select a Currency" %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
