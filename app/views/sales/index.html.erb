<p id="notice"><%= notice %></p>

<h1>Sales</h1>

<table class="table table-responsive-sm">
  <thead>
    <tr>
      <th>Company</th>
      <th>Address</th>
      <th>Status</th>
      <th>Total</th>
      <th>Vat</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sales.each do |sale| %>
      <tr>
        <td class="text-capitalize"><%= sale.company %></td>
        <td><%= sale.address %></td>
        <td><%= sale.status %></td>
        <td class="text-nowrap"><%= set_currency(sale.total, sale.currency) %></td>
        <td><%= sale.vat %></td>
        <td><%= link_to 'Show', sale %></td>
        <td><%= link_to 'Edit', edit_sale_path(sale) %></td>
        <td><%= link_to 'Destroy', sale, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

