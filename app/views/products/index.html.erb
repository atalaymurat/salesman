<div class="container-flex">
<h1>Products</h1>
<table class="table table-striped table-responsive-sm">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to(product.item_code, product) %></td>
        <td> <%= link_to(image_tag(product.pictures.first.url(:thumb)), product) if product.pictures.present? %>  </td>
        <td><%= link_to(product.title, product) %></td>
        <td>
          <% if product.currency == "EUR" %>
            <%= number_to_euro(product.unit_price) %>
          <% elsif product.currency == "TL" %>
            <%= number_to_tl(product.unit_price) %>
          <% elsif product.currency == "USD" %>
            <%= number_to_usd(product.unit_price) %>
          <% end %>
        </td>
        <td>
        <%= link_to 'Edit', edit_product_path(product), class: "btn-success btn-sm" %>
        <%= link_to 'Destroy', product, {method: :delete, data: { confirm: 'Are you sure?' },class: "btn-danger btn-sm"} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
</div>
